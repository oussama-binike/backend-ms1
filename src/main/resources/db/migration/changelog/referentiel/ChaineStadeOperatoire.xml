<!-- db/changelog-1.1-container.xml -->

<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.0.xsd">

  <!-- Create Container Table -->
    <changeSet id="1" author="your-name">
    <createTable tableName="chaine_stade_operatoire">
      <column name="id" type="BIGINT">
        <constraints primaryKey="true" nullable="false"/>
      </column>
        <column name="code" type="VARCHAR(500)"/>
        <column name="libelle" type="VARCHAR(500)"/>
        <column name="style" type="VARCHAR(500)"/>
        <column name="description" type="VARCHAR(500)"/>

        <column name="stade_operatoire_id" type="BIGINT">
          <constraints nullable="false"/>
        </column>

    </createTable>
  </changeSet>

    <!-- Add foreign key constraint -->
  <changeSet id="2" author="your-name">
      <addForeignKeyConstraint
              baseTableName="chaine_stade_operatoire"
              baseColumnNames="stade_operatoire_id"
              referencedTableName="stade_operatoire"
              referencedColumnNames="id"
              constraintName="fk_chaine_stade_operatoire_stade_operatoire"/>

  </changeSet>

    <!-- Create Sequence for ContainerType -->
  <changeSet id="3" author="your-name">
    <createSequence sequenceName="chaine_stade_operatoire_seq" startValue="1" incrementBy="1"/>
  </changeSet>

  <!-- Load Data from CSV -->
  <changeSet id="4" author="your-name">
    <loadData
            file="classpath:/db/migration/data/referentiel/ChaineStadeOperatoire.csv"
            tableName="chaine_stade_operatoire">
      <column name="id" type="NUMERIC"/>
          <column name="code" type="STRING"/>
          <column name="libelle" type="STRING"/>
          <column name="style" type="STRING"/>
          <column name="description" type="STRING"/>
        <column name="stade_operatoire" type="BIGINT"/>
    </loadData>
  </changeSet>


</databaseChangeLog>
