<!-- db/changelog-1.1-container.xml -->

<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.0.xsd">

  <!-- Create Container Table -->
    <changeSet id="1" author="your-name">
    <createTable tableName="charte_chimique">
      <column name="id" type="BIGINT">
        <constraints primaryKey="true" nullable="false"/>
      </column>
        <column name="code" type="VARCHAR(500)"/>
        <column name="libelle" type="VARCHAR(500)"/>
        <column name="description" type="VARCHAR(500)"/>
        <column name="minimum" type="NUMERIC"/>
        <column name="maximum" type="NUMERIC"/>
        <column name="average" type="NUMERIC"/>
        <column name="methode_analyse" type="VARCHAR(500)"/>
        <column name="unite" type="VARCHAR(500)"/>

        <column name="produit_id" type="BIGINT">
          <constraints nullable="false"/>
        </column>
        <column name="element_chimique_id" type="BIGINT">
          <constraints nullable="false"/>
        </column>

    </createTable>
  </changeSet>

    <!-- Add foreign key constraint -->
  <changeSet id="2" author="your-name">
      <addForeignKeyConstraint
              baseTableName="charte_chimique"
              baseColumnNames="produit_id"
              referencedTableName="produit"
              referencedColumnNames="id"
              constraintName="fk_charte_chimique_produit"/>
      <addForeignKeyConstraint
              baseTableName="charte_chimique"
              baseColumnNames="element_chimique_id"
              referencedTableName="element_chimique"
              referencedColumnNames="id"
              constraintName="fk_charte_chimique_element_chimique"/>

  </changeSet>

    <!-- Create Sequence for ContainerType -->
  <changeSet id="3" author="your-name">
    <createSequence sequenceName="charte_chimique_seq" startValue="1" incrementBy="1"/>
  </changeSet>

  <!-- Load Data from CSV -->
  <changeSet id="4" author="your-name">
    <loadData
            file="classpath:/db/migration/data/referentiel/CharteChimique.csv"
            tableName="charte_chimique">
      <column name="id" type="NUMERIC"/>
          <column name="code" type="STRING"/>
          <column name="libelle" type="STRING"/>
          <column name="description" type="STRING"/>
          <column name="minimum" type="NUMERIC"/>
          <column name="maximum" type="NUMERIC"/>
          <column name="average" type="NUMERIC"/>
          <column name="methode_analyse" type="STRING"/>
          <column name="unite" type="STRING"/>
        <column name="produit" type="BIGINT"/>
        <column name="element_chimique" type="BIGINT"/>
    </loadData>
  </changeSet>


</databaseChangeLog>
